<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/petitionTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Petition Title"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/petitionContentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Petition Content"
        app:layout_constraintTop_toBottomOf="@id/petitionTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/petitionSignaturesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signatures: 100"
        app:layout_constraintTop_toBottomOf="@id/petitionContentTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/petitionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Open"
        app:layout_constraintTop_toBottomOf="@id/petitionSignaturesTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/responseEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Write your response here"
        app:layout_constraintTop_toBottomOf="@id/petitionStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/respondButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respond"
        app:layout_constraintTop_toBottomOf="@id/responseEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
